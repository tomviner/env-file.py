#!/usr/bin/env bash
{ set +x; } 2>/dev/null

usage() {
    echo "usage: $(basename $0) variable [value]" 1>&2
    [[ $1 == "-h" ]] || [[ $1 == "--help" ]]; exit
}

[[ $1 == "-h" ]] || [[ $1 == "--help" ]] && usage "$@"
[[ $# == 0 ]] || [[ $# -gt 2 ]] || [[ -z "$1" ]] && usage

python -m env_file "$@"
